# Database Configuration
DATABASE_URL="postgresql://scraper:dev_password@localhost:5432/office_scraper"

# Redis Configuration  
REDIS_URL="redis://localhost:6379"

# S3-Compatible Object Storage
S3_BUCKET="office-scraper-raw"
S3_REGION="us-east-1"
S3_ACCESS_KEY="your_access_key_here"
S3_SECRET_KEY="your_secret_key_here"
S3_ENDPOINT="https://s3.amazonaws.com"  # Use your S3-compatible endpoint

# Scraping Configuration
USER_AGENT="FlexOfficeBot/1.0 (Professional Scraping; Contact: your-email@domain.com)"
PROXY_URL=""  # Optional: http://proxy-provider:port
REQUEST_DELAY_MS="2000"  # Default delay between requests
MAX_CONCURRENT_REQUESTS="5"

# Search API Configuration (for domain discovery)
GOOGLE_SEARCH_API_KEY=""  # Optional: Google Custom Search API
GOOGLE_SEARCH_ENGINE_ID=""  # Optional: Google Custom Search Engine ID

# Monitoring & Alerts
LOG_LEVEL="info"  # debug, info, warn, error
WEBHOOK_URL=""  # Optional: Slack/Discord webhook for alerts

# Application Settings
NODE_ENV="development"
PORT="3000"